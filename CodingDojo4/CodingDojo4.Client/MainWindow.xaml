<Window x:Class="CodingDojo4.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodingDojo4.Client"
        mc:Ignorable="d"
        Title="Client" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">            
                <Label Content="Chat Name:" Margin="10" Width="80" />
                <TextBox Height="23" Width="320" Margin="10" />
                <Button Content="Connect" Margin="10" Width="60" />
            </StackPanel>

            <Label Content="Messages" Margin="10,0"/>
            <ListBox Height="200" Margin="10" />
            <StackPanel Orientation="Horizontal">
                <Label Content="Message:" Margin="10,0" Width="80" />
                <TextBox Width="320" Margin="10,0"></TextBox>
                <Button Content="Send" Margin="10,0" Width="60"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
